<%= section_panel 'Variable Details', :width => 'double', :position => 'right' do %>
  <%= render('base/shared/edit_form',
             :resource    => @variable,
             :content     => 'cms/cis/ci',
             :cancel_url  => assembly_design_platform_variables_path(@assembly, @platform),
             :form_url    => @variable.new_record? ? assembly_design_platform_variables_path(@assembly, @platform) : assembly_design_platform_variable_path(@assembly, @platform, @variable),
             :destroy_url => @variable.persisted? ? assembly_design_platform_variable_path(@assembly, @platform, @variable) : nil) %>
<% end %>
