<%= organization_page_header('clouds') %>

<%= page_title :page_kind => 'Cloud', :page_label => @cloud.ciName %>

<%= page_info 'Edit cloud configuration' %>

<%= items = [{:label => 'configuration', :template => 'configuration', :selected => true},
             {:label => 'teams',      :url => teams_cloud_path(@cloud)},
             {:label => 'variables',  :url => cloud_variables_path(@cloud)},
             {:label => 'compliance', :url => cloud_compliances_path(@cloud)},
             {:label => 'support',    :url => cloud_supports_path(@cloud)},
             {:label => 'diff',       :url => diff_cloud_services_path(@cloud, :changes_only => params[:changes_only])}]
    if has_cloud_support?(@cloud.ciId)
      items << {:label => 'operations', :url => operations_cloud_path(@cloud, :instances_state => params[:instances_state])}
      items << {:label => 'procedures', :url => procedures_cloud_path(@cloud)}
      items << {:label => 'reports', :url => reports_cloud_path(@cloud)}
    end
    render 'base/shared/page_nav_pages', :items => items %>
