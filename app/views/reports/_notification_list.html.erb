<% if @notifications %>
  <% if @notifications.length > 0 && @histogram %>
    <%= section_panel @histogram[:title] || 'Graph', :width => 'double', :position => 'right' do %>
      <%= render 'base/shared/graph_bar', :data => @histogram %>
    <% end %>
  <% end %>
  <%= section_panel 'Notifications', :width => 'double', :position => 'right' do %>
    <%= notification_list([], :paginate => {:url => request.url, :size => @size}) do |builder, notification| %>
    <% end %>
  <% end %>
<% end %>
